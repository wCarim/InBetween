<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".MainActivity2">

    <ImageView
            android:layout_width="160dp"
            android:layout_height="225dp"
            android:id="@+id/firstCard"
            android:background="@drawable/back"
            android:layout_marginTop="23dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="54dp"/>
    <ImageView
            android:layout_width="160dp"
            android:layout_height="225dp"
            android:id="@+id/secondCard"
            android:background="@drawable/back"
            android:layout_marginTop="24dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
    />

    <ImageView
            android:layout_width="160dp"
            android:layout_height="225dp"
            android:id="@+id/thirdCard"
            android:background="@drawable/back"
            android:layout_marginTop="24dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/secondCard"
            android:layout_marginLeft="69dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="54dp"/>

    <Button android:layout_width="170dp"
            android:text="BET"
            android:layout_height="42dp"
            android:fontFamily="monospace"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="332dp"
            android:id="@+id/btnBet"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="27dp"
            android:layout_alignParentTop="false"/>
    <Button
            android:layout_width="170dp"
            android:layout_height="42dp"
            android:text="FOLD"
            android:fontFamily="monospace"
            android:textColor="@color/colorWhite"
            android:id="@+id/btnFold"
            android:layout_marginLeft="27dp"
            android:layout_below="@id/firstCard"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="-8dp"/>
    <Button
            android:text="HIGH"
            android:layout_width="170dp"
            android:layout_height="42dp"
            android:fontFamily="monospace"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="332dp"
            android:id="@+id/btnHigh"
            android:visibility="invisible"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="27dp"
            android:layout_alignParentTop="false"/>
    <Button
            android:text="LOW"
            android:visibility="invisible"
            android:id="@+id/btnLow"
            android:layout_width="170dp"
            android:layout_height="42dp"
            android:fontFamily="monospace"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="27dp"
            android:layout_below="@id/firstCard"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="-8dp"/>
    <Button
            android:text="REVEAL"
            android:layout_width="170dp"
            android:layout_height="42dp"
            android:id="@+id/btnReveal"
            android:visibility="invisible"
            android:fontFamily="monospace"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="90dp"
            android:layout_below="@id/secondCard"
            android:layout_centerHorizontal="true"


    />


</RelativeLayout>