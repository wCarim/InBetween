<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".MainActivity2">

    <Button android:layout_width="170dp"
            android:layout_height="42dp"
            android:text="BET"
            android:fontFamily="monospace"
            android:textColor="@color/colorWhite"
            android:background="@drawable/butt"
            android:layout_marginTop="332dp"
            android:id="@+id/betbutt"
            android:layout_alignParentStart="true"
            android:layout_marginStart="449dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="111dp"
            android:layout_alignParentTop="true"/>
    <ImageView
            android:layout_width="160dp"
            android:id="@+id/card1"
            android:layout_height="225dp"
            android:background="@drawable/back"
            android:layout_marginTop="23dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="27dp"/>
    <ImageView
            android:layout_width="160dp"
            android:layout_height="225dp"
            android:id="@+id/card2"
            android:background="@drawable/back"
            android:layout_marginTop="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="85dp"
            android:layout_toEndOf="@+id/card1"/>

    <ImageView
            android:layout_width="160dp"
            android:layout_height="225dp"
            android:id="@+id/card3"
            android:background="@drawable/back"
            android:layout_marginTop="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="85dp"
            android:layout_toEndOf="@+id/card2" android:layout_alignParentEnd="true" android:layout_marginEnd="54dp"/>


</RelativeLayout>