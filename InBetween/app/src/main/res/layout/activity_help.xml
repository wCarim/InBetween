<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="28dp"
        android:paddingBottom="28dp"
        android:background="@drawable/bg"
        tools:context=".Help">

    <TextView
            android:layout_width="450dp"
            android:layout_height="70dp"
            android:background="@drawable/how"
            android:id="@+id/btnAboutUs"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="150dp"
            android:layout_height="42dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:textSize="16dp"
            android:id="@+id/bet"
            android:drawableStart="@drawable/custom_dollar_icon"
            android:hint="YOUR BET"
            android:background="@drawable/custom_input"
            android:layout_below="@id/money"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="60dp"
            android:gravity="center"/>

    <TextView
            android:layout_width="150dp"
            android:layout_height="42dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:textSize="16dp"
            android:id="@+id/money"
            android:drawableStart="@drawable/custom_dollar_icon"
            android:hint="YOUR MONEY"
            android:background="@drawable/whitebg"
            android:layout_marginTop="20dp"
            android:layout_below="@id/btnRound"
            android:layout_marginLeft="60dp"
            android:gravity="center"/>

    <Button android:layout_width="170dp"
            android:text="BET"
            android:layout_height="42dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/btnBet"
            android:layout_below="@id/bet"
            android:background="@drawable/lightredbutt"
    />
    <Button
            android:layout_width="170dp"
            android:text="START ROUND"
            android:layout_height="42dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:textColor="@color/colorWhite"
            android:id="@+id/btnRound"
            android:background="@drawable/lightredbutt"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="50dp"
    />
    <Button
            android:layout_width="170dp"
            android:layout_height="42dp"
            android:text="FOLD"
            android:fontFamily="@font/open_sans_extrabold"
            android:background="@drawable/lightyellowbutt"
            android:textColor="@color/colorBlack"
            android:id="@+id/btnFold"
            android:layout_below="@id/btnBet"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            />
    <Button
            android:text="HIGH"
            android:layout_width="170dp"
            android:layout_height="42dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="20dp"
            android:background="@drawable/lightbluebutt"
            android:id="@+id/btnHigh"
            android:layout_alignParentStart="false"
            android:layout_marginRight="190dp"
            android:layout_below="@id/btnAllIn"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="false"/>
    <Button
            android:text="LOW"
            android:id="@+id/btnLow"
            android:background="@drawable/lightgreenbutt"
            android:layout_width="170dp"
            android:layout_height="42dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="190dp"
            android:layout_below="@id/btnHigh"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
    />
    <Button
            android:text="ALL IN"
            android:layout_width="170dp"
            android:layout_height="42dp"
            android:id="@+id/btnAllIn"
            android:background="@drawable/darkbluebutt"
            android:fontFamily="@font/open_sans_extrabold"
            android:textColor="@color/colorWhite"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="190dp"
            android:layout_marginTop="70dp"
    />
    <Button
            android:text="20"
            android:id="@+id/btn20"
            android:background="@drawable/lightgreenbutt"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="20dp"
            android:layout_marginRight="310dp"
            android:layout_below="@id/btnLow"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
    />
    <Button
            android:text="50"
            android:id="@+id/btn50"
            android:background="@drawable/lightpinkbutt"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="250dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/btnLow"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"

    />
    <Button
            android:text="70"
            android:id="@+id/btn70"
            android:background="@drawable/lightbluebutt"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="20dp"
            android:layout_marginRight="190dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/btnLow"

    />
    <Button
            android:text="CLEAR"
            android:id="@+id/btnClear"
            android:background="@drawable/darkvioletbutt"
            android:layout_width="80dp"
            android:layout_height="42dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:layout_marginTop="20dp"
            android:layout_below="@id/btn20"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="235dp"

    />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnBack"
            android:background="@drawable/arrow2"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
    />
    <TextView
            android:layout_width="170dp"
            android:text="START/NEXT ROUND"
            android:layout_height="42dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:textColor="@color/colorBlack"
            android:background="@drawable/lightorangebutt"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="250dp"
            android:gravity="center"
/>
    <TextView
            android:layout_width="170dp"
            android:text="CURRENT MONEY"
            android:layout_height="42dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:textColor="@color/colorBlack"
            android:background="@drawable/lightorangebutt"
            android:layout_marginTop="20dp"
            android:layout_below="@id/btnRound"
            android:layout_marginLeft="250dp"
            android:gravity="center"/>
    <TextView
            android:layout_width="170dp"
            android:text="BET AMOUNT"
            android:layout_height="42dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:textColor="@color/colorBlack"
            android:background="@drawable/lightorangebutt"
            android:layout_marginTop="20dp"
            android:layout_below="@id/money"
            android:layout_marginLeft="250dp"
            android:gravity="center"
    />
    <TextView
            android:layout_width="170dp"
            android:text="PLACE BET"
            android:layout_height="42dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:textColor="@color/colorBlack"
            android:background="@drawable/lightorangebutt"
            android:layout_marginTop="20dp"
            android:layout_below="@id/bet"
            android:layout_marginLeft="250dp"
            android:gravity="center"
/>
    <TextView
            android:layout_width="170dp"
            android:text="DONT PLAY ROUND"
            android:layout_height="42dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:textColor="@color/colorBlack"
            android:background="@drawable/lightorangebutt"
            android:layout_marginTop="20dp"
            android:layout_below="@id/btnBet"
            android:layout_marginLeft="250dp"
            android:gravity="center"
    />
    <TextView
            android:layout_width="170dp"
            android:text="BET ALL MONEY"
            android:layout_height="42dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:textColor="@color/colorBlack"
            android:background="@drawable/lightorangebutt"
            android:gravity="center"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="70dp"
            />
    <TextView
            android:layout_width="170dp"
            android:text="HIDDEN CARD HIGHER"
            android:layout_height="42dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:textColor="@color/colorBlack"
            android:background="@drawable/lightorangebutt"
            android:gravity="center"
            android:layout_below="@id/btnAllIn"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
    />
    <TextView
            android:layout_width="170dp"
            android:text="HIDDEN CARD LOWER"
            android:layout_height="42dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:textColor="@color/colorBlack"
            android:background="@drawable/lightorangebutt"
            android:gravity="center"
            android:layout_below="@id/btnHigh"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
    />
    <TextView
            android:layout_width="170dp"
            android:text="BET INPUTS"
            android:layout_height="42dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:textColor="@color/colorBlack"
            android:background="@drawable/lightorangebutt"
            android:gravity="center"
            android:layout_below="@id/btnLow"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
    />
    <TextView
            android:layout_width="170dp"
            android:text="CLEAR/RESET BET"
            android:layout_height="42dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:textColor="@color/colorBlack"
            android:background="@drawable/lightorangebutt"
            android:gravity="center"
            android:layout_below="@id/btn50"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="19dp"
    />
</RelativeLayout>