<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="28dp"
        android:paddingBottom="28dp"
        android:background="@drawable/bg"
        tools:context=".Help">


    <ImageView
            android:layout_width="60dp"
            android:layout_height="46dp"
            android:background="@drawable/lightpinkbutt"
            android:text="50"
            android:layout_marginTop="138dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="636dp"
            android:layout_alignParentStart="true"
            android:id="@+id/addno"
            android:layout_marginStart="19dp"/>
    <TextView
            android:text="HELP"
            android:textColor="@color/colorWhite"
            android:textSize="50sp"
            android:layout_width="159dp"
            android:id="@+id/helptxt"
            android:layout_height="100dp"
            android:layout_marginTop="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="245dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="295dp"/>

    <TextView
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:text="This add the money that the player is betting,    buttons are divided into 3, 20, 50 and 70."
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:background="@drawable/whitebg"
            android:textSize="10sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="383dp"
            android:layout_alignParentStart="true"
            android:id="@+id/txt1"
            android:layout_marginStart="118dp"
            android:layout_below="@+id/helptxt"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/lightredbutt"
            android:layout_alignParentEnd="true"
            android:id="@+id/startgame"
            android:layout_marginEnd="609dp"
            android:layout_marginTop="18dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp" android:layout_below="@+id/addno"/>

    <TextView
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:text="This button will let you start the game."
            android:textColor="@color/colorBlack"
            android:layout_marginTop="38dp"
            android:background="@drawable/whitebg"
            android:textSize="10sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="469dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="144dp"
            android:id="@+id/txt2"
            android:layout_below="@+id/txt1"/>
    <TextView
            android:layout_width="96dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/custom_dollar_icon"
            android:layout_marginTop="18dp"
            android:id="@+id/blank"
            android:layout_below="@+id/startgame"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="584dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is where the money the player is betting."
            android:textColor="@color/colorBlack"
            android:layout_marginTop="24dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/txt3"
            android:background="@drawable/whitebg"
            android:textSize="10sp"
            android:layout_marginEnd="428dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="172dp"
            android:layout_below="@+id/txt2"/>
    <ImageView
            android:layout_width="73dp"
            android:layout_height="37dp"
            android:background="@drawable/lightyellowbutt"
            android:layout_alignParentEnd="true"
            android:id="@+id/allin"
            android:layout_marginEnd="584dp"
            android:layout_marginTop="18dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="58dp" android:layout_below="@+id/blank"/>

    <TextView
            android:layout_width="125dp"
            android:layout_height="36dp"
            android:text="This button will make you skip the flip."
            android:textColor="@color/colorBlack"
            android:layout_marginTop="26dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="415dp"
            android:background="@drawable/whitebg"
            android:textSize="10sp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="175dp"
            android:layout_below="@+id/txt3"/>
    <ImageView
            android:layout_width="81dp"
            android:layout_height="45dp"
            android:background="@drawable/lightgreenbutt"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/helptxt"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="293dp"
            android:id="@+id/high"
            android:layout_alignParentStart="true"
            android:layout_marginStart="341dp"/>

    <TextView
            android:layout_width="186dp"
            android:layout_height="40dp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/whitebg"
            android:id="@+id/txt4"
            android:textSize="10sp"
            android:text="This button is when the player guesses if it's high."
            android:layout_marginTop="17dp" android:layout_below="@+id/helptxt" android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp" android:layout_alignParentStart="true" android:layout_marginStart="489dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/lightbluebutt"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/high"
            android:id="@+id/low"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="283dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="335dp"/>
    <TextView
            android:layout_width="187dp"
            android:layout_height="39dp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/whitebg"
            android:textSize="10sp"
            android:text="This button is when the player guesses if it's low."
            android:layout_alignParentEnd="true"
            android:id="@+id/txt5"
            android:layout_marginEnd="36dp" android:layout_alignParentStart="true" android:layout_marginStart="492dp"
            android:layout_marginTop="21dp" android:layout_below="@+id/txt4"/>

    <ImageView
            android:layout_width="86dp"
            android:layout_height="37dp"
            android:background="@drawable/lightgraybutt"
            android:id="@+id/reset"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="277dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="352dp" android:layout_marginTop="20dp" android:layout_below="@+id/low"/>

    <TextView
            android:layout_width="187dp"
            android:layout_height="39dp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/whitebg"
            android:textSize="10sp"
            android:text="This button will reset the game."
            android:layout_alignParentEnd="true"
            android:id="@+id/txt6"
            android:layout_marginEnd="63dp" android:layout_alignParentStart="true" android:layout_marginStart="497dp"
            android:layout_marginTop="25dp" android:layout_below="@+id/txt5"/>

    <ImageView
            android:layout_width="102dp"
            android:layout_height="45dp"
            android:background="@drawable/lightredbutt"
            android:id="@+id/bet"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="261dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="352dp" android:layout_marginTop="10dp" android:layout_below="@+id/reset"/>
    <TextView
            android:layout_width="188dp"
            android:layout_height="50dp"
            android:background="@drawable/whitebg"
            android:textSize="10sp"
            android:textColor="@color/colorBlack"
            android:text="This button will prompt the app to bet."
            android:layout_marginTop="8dp" android:layout_below="@+id/txt6" android:layout_alignParentEnd="true"
            android:layout_marginEnd="58dp" android:layout_alignParentStart="true" android:layout_marginStart="500dp"/>


    <Button
            android:layout_width="59dp" android:layout_height="wrap_content"
            android:background="@drawable/arrow2"
            android:id="@+id/btnBack"
            android:layout_marginTop="14dp" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:layout_marginEnd="633dp" android:layout_alignParentStart="true" android:layout_marginStart="23dp"/>

</RelativeLayout>