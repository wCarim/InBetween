<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".HelpActivity">


    <TextView
            android:id="@+id/help"
            android:layout_width="84dp"
            android:layout_height="50dp"
            android:fontFamily="monospace"
            android:text="HELP"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:layout_marginTop="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="323dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="323dp"/>
    <TextView
            android:id="@+id/helpinfo"
            android:layout_width="478dp"
            android:layout_height="246dp"
            android:fontFamily="monospace"
            android:background="@drawable/textbg"
            android:text="About us: This app is aiming to make a game where the player needs to decide how much they'd bet to earn prices. Here are some links incase the player desires more information:"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="125dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="128dp"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/help"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/linkbutt"
            android:background="@drawable/helppic"
            android:layout_marginTop="163dp"
            android:layout_below="@+id/help"
            android:layout_alignParentStart="true"
            android:layout_marginStart="150dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="506dp"/>

    <TextView
            android:id="@+id/helptext"
            android:layout_width="376dp"
            android:layout_height="55dp"
            android:fontFamily="monospace"
            android:text="Bycicle Cards, How to play: In-Between "
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="114dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="241dp"
            android:layout_marginTop="186dp"
            android:layout_below="@+id/help"/>


</RelativeLayout>