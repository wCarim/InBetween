<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".MainActivity">


    <ImageView
            android:layout_width="87dp"
            android:layout_height="88dp"
            android:src="@drawable/appicon"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="83dp"
            tools:srcCompat="@drawable/appicon" android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" android:layout_marginEnd="163dp" android:layout_alignParentStart="true"
            android:layout_marginStart="162dp"/>
    <TextView
            android:id="@+id/appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IN BETWEEN"
            android:textColor="@color/colorRed"
            android:textSize="50sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="22dp" app:layout_constraintHorizontal_bias="0.306"
            android:layout_below="@+id/imageView" android:layout_alignParentEnd="true"
            android:layout_marginEnd="61dp" android:layout_alignParentStart="true" android:layout_marginStart="63dp"/>
    <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/startbutt"
            android:textColor="@color/colorPrimary"
            android:textSize="11sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/appname"
            android:layout_marginTop="37dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.18" android:layout_marginStart="90dp"
            android:layout_marginEnd="76dp" android:layout_below="@+id/appname"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/optbutt"
            android:textColor="@color/colorPrimary"
            android:textSize="11sp"
            tools:ignore="InvalidId,MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/appname"
            android:layout_marginTop="21dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.178" android:layout_below="@+id/btn1"
            android:layout_marginStart="56dp" android:layout_marginEnd="75dp"/>
    <Button
            android:layout_width="245dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/helpbutt"
            android:textColor="@color/colorPrimary"
            android:textSize="11sp"
            app:layout_constraintTop_toBottomOf="@+id/appname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.178"
            android:layout_marginStart="82dp"
            android:layout_marginEnd="84dp"
            android:layout_marginTop="112dp"
            android:layout_below="@+id/btn1"/>


</RelativeLayout>