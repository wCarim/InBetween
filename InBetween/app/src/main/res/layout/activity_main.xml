<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".MainActivity">


    <ImageView
            android:layout_width="159dp"
            android:layout_height="84dp"
            android:src="@drawable/appicon"
            android:id="@+id/imageView"
            android:layout_marginTop="17dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="286dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="285dp"/>
    <TextView
            android:id="@+id/appname"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="IN BETWEEN"
            android:textColor="@color/colorWhite"
            android:textSize="50sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="212dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="210dp"/>


    <Button android:layout_width="170dp"
            android:layout_height="42dp"
            android:text="START"
            android:fontFamily="monospace"
            android:textColor="@color/colorWhite"
            android:background="@drawable/butt"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/appname"
            android:id="@+id/startbutt"
            android:layout_alignParentStart="true"
            android:layout_marginStart="280dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="281dp"/>

    <Button android:layout_width="170dp"
            android:layout_height="42dp"
            android:text="OPTIONS"
            android:fontFamily="monospace"
            android:textColor="@color/colorWhite"
            android:background="@drawable/butt"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/startbutt"
            android:id="@+id/optbutt"
            android:layout_alignParentStart="true"
            android:layout_marginStart="280dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="281dp"/>

    <Button android:layout_width="170dp"
            android:layout_height="42dp"
            android:text="HELP"
            android:fontFamily="monospace"
            android:textColor="@color/colorWhite"
            android:background="@drawable/butt"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/optbutt"
            android:id="@+id/helpbutt"
            android:layout_alignParentStart="true"
            android:layout_marginStart="280dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="281dp"/>


</RelativeLayout>