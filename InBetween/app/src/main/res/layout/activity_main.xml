<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".MainActivity">


    <ImageView
            android:layout_width="159dp"
            android:layout_height="84dp"
            android:src="@drawable/appicon"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="17dp"
            tools:srcCompat="@drawable/appicon" android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" android:layout_marginEnd="286dp" android:layout_alignParentStart="true"
            android:layout_marginStart="285dp"/>
    <TextView
            android:id="@+id/appname"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:text="IN BETWEEN"
            android:textColor="@color/colorRed"
            android:textSize="50sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="9dp" app:layout_constraintHorizontal_bias="0.306"
            android:layout_below="@+id/imageView" android:layout_alignParentEnd="true"
            android:layout_marginEnd="208dp" android:layout_alignParentStart="true" android:layout_marginStart="214dp"/>
    <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/startbutt"
            android:textColor="@color/colorPrimary"
            android:textSize="11sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/appname"
            android:layout_marginTop="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.18" android:layout_marginStart="264dp"
            android:layout_marginEnd="252dp" android:layout_below="@+id/appname"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="69dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/optbutt"
            android:textColor="@color/colorPrimary"
            android:textSize="11sp"
            tools:ignore="InvalidId,MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/appname"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.178" android:layout_below="@+id/btn1"
            android:layout_marginStart="244dp" android:layout_marginEnd="252dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="69dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/helpbutt"
            android:textColor="@color/colorPrimary"
            android:textSize="11sp"
            app:layout_constraintTop_toBottomOf="@+id/appname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.178"
            android:layout_marginStart="254dp"
            android:layout_marginEnd="253dp"
            android:layout_marginTop="76dp"
            android:layout_below="@+id/btn1"/>
    <Button
            android:text="< Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            />


</RelativeLayout>